<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#750505"
    tools:context=".TicketFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="30dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textStart"
            android:layout_marginStart="90dp"
            android:text="Ticket"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="@font/mmedium" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#750505"
            android:fillViewport="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical">
                        <!-- Konten Kartu 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/movie"
                                android:src="@drawable/sherina"
                                android:layout_width="100dp"
                                android:layout_height="100dp">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:id="@+id/Judulfilm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="Petualangan Sherina 2"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/BioskopFilm"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:text="Ambarukmo XXI"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/studio"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:text="Studio 1"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/kode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="1 2 5 4"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_margin="20dp"
                            android:background="#777777">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="40dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical">
                        <!-- Konten Kartu 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/movie2"
                                android:src="@drawable/airmata"
                                android:layout_width="100dp"
                                android:layout_height="100dp">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:id="@+id/Judulfilm2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="Air Mata di Ujung Sajadah"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/BioskopFilm2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:text="Ambarukmo XXI"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/studio2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:text="Studio 2"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/kode2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="1 8 9 2"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_margin="20dp"
                            android:background="#777777">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="40dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical">
                        <!-- Konten Kartu 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/movie4"
                                android:src="@drawable/kitacerita"
                                android:layout_width="100dp"
                                android:layout_height="100dp">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:id="@+id/Judulfilm4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="Nanti Kita Cerita Tentang Hari Ini"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/BioskopFilm4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:text="Ambarukmo XXI"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/studio5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:text="Studio 4"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/kode4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="1 7 0 7"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_margin="20dp"
                            android:background="#777777">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="40dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_margin="20dp"
                        android:orientation="vertical">
                        <!-- Konten Kartu 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/movie3"
                                android:src="@drawable/rembulan"
                                android:layout_width="100dp"
                                android:layout_height="100dp">
                            </ImageView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">
                                <TextView
                                    android:id="@+id/Judulfilm3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="Rembulan Tenggelam di Wajahmu"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/BioskopFilm3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:text="Ambarukmo XXI"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/studio4"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:text="Studio 3"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                                <TextView
                                    android:id="@+id/kode3"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:text="1 0 5 6"
                                    android:fontFamily="@font/mmedium">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>
                        <ImageView
                            android:layout_height="1dp"
                            android:layout_width="match_parent"
                            android:layout_margin="20dp"
                            android:background="#777777">
                        </ImageView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>






</FrameLayout>